<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokedex</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <nav>
        <ul>
            <li><img src="" alt=""></li>
            <li><h1>Pokedex</h1></li>
            <li><a href="#cadastro">Cadastro</a></li>
            <li><a href="#cards">Pokemons</a></li>
        </ul>
    </nav>

    <header>
        <img src="/img/banner.png" alt="">
    </header>

    <main>
        <section id="cards">
            <% pokedex.forEach((pokemon) => { %>
                <div class="card">
                    <h2><%= pokemon.nome %></h2>
                    <img src="<%= pokemon.imagem %>" alt="">
                    <p><%= pokemon.descricao %></p>
                    <h3>Tipo: <%= pokemon.tipo %></h3>
                    <h3>Altura: <%= pokemon.altura %> m</h3>
                    <h3>Peso: <%= pokemon.peso %> Kg</h3>
                    <a id="editar" href="/detalhes/<%= pokemon.id %>">Editar</a>
                    <a id="apagar" href="/delete/<%= pokemon.id %>">Apagar</a>
                </div>  
            <% }) %>  
        </section>

        <section id="cadastro">
            <% if (pokemon == undefined ) { %>

            <h2>Cadastre um novo Pokemon!</h2>

            <form action="/create" method="post">
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" >

                <label for="descricao">Descrição:</label>
                <input type="text" name="descricao" id="descricao">

                <label for="tipo">Tipo:</label>
                <input type="text" name="tipo" id="tipo">

                <label for="altura">Altura:</label>
                <input type="text" name="altura" id="altura">

                <label for="peso">Peso:</label>
                <input type="text" name="peso" id="peso">

                <label for="imagem">Link da Imagem</label>
                <input type="text" name="imagem" id="imagem">

                <button id="btnCadastrar" type="submit">Cadastrar</button>
            </form>
            <% } else { %>

            <h2>Atualizar dados do Pokemon</h2>
            
            <form action="/update/<%= pokemon.id %>" method="post">
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" value="<%= pokemon.nome %>" >

                <label for="descricao">Descrição:</label>
                <input type="text" name="descricao" id="descricao" value="<%= pokemon.descricao %>">

                <label for="tipo">Tipo:</label>
                <input type="text" name="tipo" id="tipo" value="<%= pokemon.tipo %>">

                <label for="altura">Altura:</label>
                <input type="text" name="altura" id="altura" value="<%= pokemon.altura %>">

                <label for="peso">Peso:</label>
                <input type="text" name="peso" id="peso" value="<%= pokemon.peso %>">

                <label for="imagem">Link da Imagem</label>
                <input type="text" name="imagem" id="imagem" value="<%= pokemon.imagem %>">

                <button id="btnAtualizar" type="submit">Atualizar</button>
            </form>
            <% } %>
            
        </section>
    </main>
    <footer>
        <p>Todos os direitos reservador para <a target="_blank" href="https://github.com/DevzVictor">Victor</a></p>
        <p>Dados retirados de <a target="_blank" href="https://www.pokemon.com/br/pokedex/">Pokédex</a></p>
    </footer>
</body>
</html>